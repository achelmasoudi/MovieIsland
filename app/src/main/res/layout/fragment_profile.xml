<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ProfileImageId"
            android:layout_marginTop="50dp"
            app:civ_border_color="#006AFF"
            app:civ_border_width="2dp"
            android:src="@drawable/anonymous_profile"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="160dp"/>


        <TextView
            android:id="@+id/YournameInProfileId"
            android:text="AChraf El Masoudi"
            android:textStyle="bold"
            android:textSize="27dp"
            android:fontFamily="@font/aldrich"
            android:textColor="#006AFF"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_above="@id/logoutfromprofileId"
        android:background="#006AFF"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"/>

    <TextView
        android:id="@+id/logoutfromprofileId"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:text="Log Out"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>